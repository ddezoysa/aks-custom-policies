{
  "properties": {
    "displayName": "Kubernetes cluster ConfigMaps should not have restricted keys.",
    "policyType": "Custom",
    "mode": "Microsoft.Kubernetes.Data",
    "description": "This policy will restrict ConfigMaps to have restricted keys such as usernames and passwords, please go to https://github.com/ddezoysa/block-configmap-keys",
    "metadata": {
      "version": "1.0.0-preview",
      "category": "Kubernetes PSP",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "audit",
          "deny",
          "disabled"
        ],
        "defaultValue": "audit"
      },
      "excludedNamespaces": {
        "type": "Array",
        "metadata": {
          "displayName": "Namespace exclusions",
          "description": "List of Kubernetes namespaces to exclude from policy evaluation. Providing a value for this parameter is optional."
        },
        "defaultValue": [
          "kube-system",
          "gatekeeper-system",
          "azure-arc"
        ]
      },
      "restrictedKeys": {
        "type": "Array",
        "metadata": {
          "displayName": "Restricted Key Names",
          "description": "List of Key names which needs to be restricted from ConfigMaps."
        },
        "defaultValue": [
          "username",
          "password",
          "token"
        ]
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "AKS Engine",
          "Microsoft.Kubernetes/connectedClusters",
          "Microsoft.ContainerService/managedClusters"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "constraintTemplate": "https://raw.githubusercontent.com/ddezoysa/aks-custom-policies/master/block-configmap-keys/template.yaml",
          "constraint": "https://raw.githubusercontent.com/ddezoysa/aks-custom-policies/master/block-configmap-keys/constraint.yaml",
          "values": {
            "excludedNamespaces": "[parameters('excludedNamespaces')]",
            "restrictedKeys": "[parameters('restrictedKeys')]"
          }
        }
      }
    }
  }
}